<h1>Users</h1>
<div id="users_list">
  <% if can? :manage, User %>
<p><%= link_to '< New >', new_user_path %></p></br>
<% end %>
  <table>
    <thead>
      <tr>
        <th>Email</th>
        <% if can? :manage, User %>
          <th>&nbsp;&nbsp;&nbsp;&nbsp;Actions</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.email, user %></td>
          <% if can? :manage, User %>
            <td>
              <p>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Edit', edit_user_path(user) %> |
              <%= link_to 'Delete', user_path(user), :method => 'delete', :confirm => 'Are you sure?' %></p>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div></br>
